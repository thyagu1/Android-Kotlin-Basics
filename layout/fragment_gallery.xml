<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <Button
        android:id="@+id/goto_tipcal_button"
        android:layout_width="150dp"
        android:layout_height="34dp"

        android:layout_marginStart="336dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="108dp"
        android:background="#20B2AA"
        android:text="@string/tipcal_button"
        android:textColor="#ffffff"

        app:layout_constraintBottom_toTopOf="@+id/dice_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dice_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="198dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="199dp"
        android:layout_marginBottom="64dp"
        android:src="@drawable/empty_dice"
        app:layout_constraintBottom_toTopOf="@+id/roll_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goto_tipcal_button"
        tools:src="@drawable/dice_1" />

    <Button
        android:id="@+id/roll_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"

        android:layout_marginStart="254dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="255dp"
        android:layout_marginBottom="300dp"
        android:text="@string/roll_button"
        android:textColor="#78c257"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dice_image" />


</androidx.constraintlayout.widget.ConstraintLayout>